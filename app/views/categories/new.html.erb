<% provide(:title, 'Category Add') %>
<h1>Add a Category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br/>


        <%= f.submit "Create Category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
